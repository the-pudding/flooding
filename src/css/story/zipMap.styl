.map-wrapper
  max-width 500px
  margin-top 3rem
  margin-left 2rem
  &:first-of-type
    margin-left 0
.map, .county-map
  height 300px
  width 500px
  display block
.map-title
  font-size 18px
  font-family $atlas
  margin 0 auto
  width 100%
  font-weight 400
  padding 0
  span
    font-weight 600
.legend
  display flex
  margin-top 10px
  justify-content center
  margin-bottom 10px
  .legend-colors
    display flex
    margin 0 10px
    .legend-item
      height 5px
      width 20px
      align-self center
  .legend-text
    font-family $atlas
    margin 0
    padding 0
    line-height 1
    font-size 12px
    font-weight 400px
    align-self center
