/* CUSTOM STORY STYLE */
.section-hed
  font-family $atlas
  font-size 24px
  margin 0 auto
  text-align center
  padding 0
.section-dek
  font-size 18px
  margin 0 auto
  font-family $lyon
  text-align center
  padding 0

.table-wrapper, .graphic-wrapper
  display flex
  flex-wrap wrap
  justify-content center
.bar-wrapper
  max-width $column-width 
  padding 0 1rem
  margin 0 auto

.meta-title 
  font-family $atlas 
  set-type-size('xxx-large')
  font-weight 500
  text-align center 

.meta-sub 
  font-family $atlas 
  set-type-size('large')
  text-align center

.embed 
  font-size 16px
  text-align left
  margin 0
  padding 0
  font-weight 400
  margin-top 1.5rem
  font-family $atlas

.figure__desc 
  font-size 16px
  text-align left
  margin 0
  padding 0
  font-weight 400
  margin-top 1.5rem
  font-family $atlas
  span
    font-weight 600
  .FEMA 
    color $fema 
  .FS 
    color $fs

.controls-container 
  display flex 
  flex-direction row 
  align-items baseline
  .controls-directions 
    set-type-size('root')
    text-transform uppercase
    font-family $atlas

  .controls-buttons 
    input[type=radio]
      opacity 0
      position absolute 
      margin 0
    label 
      font-family $atlas 
      set-type-size('large')
      font-weight bold 
      padding 0.5rem 1rem 
      border 1px solid $gray-light 
      background-color $white 
      border-radius 5px
      margin 0
    input:checked + label 
        background-color $gray-light
.climate-section, .fema-section
  margin-top 5rem
