#mapbox-map
	width 100vw
	height 50vh

body
	.intro
		margin 0 auto
		font-family $lyon
		text-align left
		max-width $column-width
		width 95%
		border-bottom 1px solid #ddd
		margin-bottom 3rem
		.by-the
			font-family $atlas
			font-size 12px
		.hed
			font-size 64px
			font-family $lyon-display
			margin 0 auto
			line-height 1
			max-width 95%
			width 100%
			padding 0
			margin-bottom 3rem
			font-weight 300
			text-align center

		.dek
			font-size 36px
			margin 0 auto
			padding 0
			line-height 1.3

		.update-date
			font-size 12px
			font-family $atlas
			text-align center
			margin 0 auto
			padding 0
			max-width 95%
